<h1>Ваши заказы</h1>

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>№ заказа</th>
    <th>Дата создания</th>
    <th>Последнее изменение</th>
    <th>На сумму</th>
    <th>Способ оплаты</th>
    <th>Статус</th>
  </tr>
  </thead>
  <tbody>
<% @orders.each do |order| %>
  <tr>
    <td>
        <%= link_to order.id.to_s, order %>
    </td>
    <td>
      <%= order.created_at %>
    </td>
    <td>
      <%= order.updated_at %>
    </td>
    <td>
      <%= order.total_price %>
    </td>
    <td>
      <%= order.pay_type %>
    </td>
    <td>
      <%= Order.STATUS( order.status.present? ? order.status : 0 ) %>
    </td>
  </tr>
<% end %>
  </tbody>
</table>