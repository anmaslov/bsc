<h2>Измените ваш пароль:</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

    <div class="row">
      <div class="form-group">
        <%= f.label 'Новый пароль', :class => 'col-sm-2 control-label' %>
        <div class="col-sm-5">
          <%= f.password_field :password, :autofocus => true, :class => 'form-control' %>
        </div>
      </div>
    </div>
    <div class="clear" style="height: 10px;"></div>
    <div class="row">
      <div class="form-group">
        <%= f.label 'Повторно введите новый пароль', :class => 'col-sm-2 control-label' %>
        <div class="col-sm-5">
          <%= f.password_field :password_confirmation, :class => 'form-control' %>
        </div>
      </div>
    </div>

   <div class="clear" style="height: 10px;"></div>
    <div class="row" id="submit_form">
      <div class="form-group">
        <div class="actions col-sm-7">
          <%= f.submit 'Изменить', :class => 'btn btn-success btn-block' %>
        </div>
      </div>
    </div>
<% end %>

<%= render "devise/shared/links" %>
