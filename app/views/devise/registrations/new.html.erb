<h2>Регистрация</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <div class="row">
        <div class="form-group">
          <%= f.label 'Контактное лицо', :class => 'col-sm-2 control-label' %>
          <div class="col-sm-5">
             <%= f.text_field :name, :class => 'form-control', :placeholder => 'ФИО' %>
          </div>
        </div>
    </div>

    <div class="clear" style="height: 10px;"></div><div class="row">
      <div class="form-group">
        <%= f.label 'Телефон', :class => 'col-sm-2 control-label' %>
        <div class="col-sm-5">
          <%= f.text_field :phone,
                           :class => 'form-control',
                           :placeholder => '+7 123 456-78-90',
                           :id => 'phone'
          %>
        </div>
      </div>
    </div>

    <div class="clear" style="height: 10px;"></div><div class="row">
    <div class="form-group">
      <%= f.label 'Электропочта', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-5">
        <%= f.email_field :email, :class => 'form-control', :placeholder => 'mail@mail.ru' %>
      </div>
    </div>
    </div>


    <div class="clear" style="height: 10px;"></div><div class="row">
      <div class="form-group">
        <%= f.label 'Адрес', :class => 'col-sm-2 control-label' %>
        <div class="col-sm-5">
          <%= f.text_area :address,
                          :class => 'form-control',
                          :placeholder => 'Город, улица, дом, квартира/офис',
                          :rows => 5, :cols => 120 %>
        </div>
      </div>
    </div>

    <div class="clear" style="height: 10px;"></div>
      <div class="row" id="name_organization">
      <div class="form-group">
        <%= f.label 'Название организации', :class => 'col-sm-2 control-label' %>
        <div class="col-sm-5">
          <%= f.text_field :NameOrganization, :class => 'form-control', :placeholder => 'ООО Строитель' %>
        </div>
      </div>
    </div>

    <div class="clear" style="height: 10px;"></div>
    <div class="row" id="inn_organization">
      <div class="form-group">
        <%= f.label 'ИНН организации', :class => 'col-sm-2 control-label' %>
        <div class="col-sm-5">
          <%= f.text_field :InnOrganization, :class => 'form-control', :placeholder => '7814556921' %>
        </div>
      </div>
    </div>

    <div class="clear" style="height: 10px;"></div><div class="row">
    <div class="form-group">
      <%= f.label 'Пароль', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-5">
        <%= f.password_field :password, :class => 'form-control' %>
      </div>
    </div>
      </div>
    <div class="clear" style="height: 10px;"></div> <div class="row">
    <div class="form-group">
      <%= f.label 'Повторите пароль', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-5">
        <%= f.password_field :password_confirmation, :class => 'form-control' %>
      </div>
    </div>
        </div>
    <div class="clear" style="height: 10px;"></div><div class="row">
    <div class="row" id="submit_form">
      <div class="form-group">
        <div class="actions col-sm-7">
          <%= f.submit 'Регистрация', :class => 'btn btn-success btn-block' %>
        </div>
      </div>
    </div>
          </div>
<% end %>

<%= render "devise/shared/links" %>
