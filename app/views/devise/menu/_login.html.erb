<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => 'form-horizontal') do |f| %>
      <p>
        <%= f.email_field :email, :autofocus => true, :class => 'form-control', :placeholder => 'Электронная почта' %>
      </p>
      <p>
        <%= f.password_field :password, :class => 'form-control', :placeholder => "Пароль" %>
      </p>
    <p>
    <% if devise_mapping.rememberable? -%>
        <div class="checkbox">

            <%= f.check_box :remember_me %>
          <label for="user_remember_me">
            Запомнить меня
          </label>
        </div>
    <% end -%>
    </p>
    <p>
      <%= f.submit "Войти", :class => 'btn btn-default' %>
    </p>
<% end %>

