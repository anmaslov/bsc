<h2>Вход с паролем</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

    <div class="row">
      <div class="form-group">
        <%= f.label 'Электропочта', :class => 'col-sm-2 control-label' %>
        <div class="col-sm-5">
          <%= f.email_field :email, :autofocus => true, :class => 'form-control', :placeholder => 'mail@mail.ru' %>
        </div>
      </div>
    </div>

    <div class="clear" style="height: 10px;"></div>

    <div class="row">
      <div class="form-group">
        <%= f.label 'Пароль', :class => 'col-sm-2 control-label' %>
        <div class="col-sm-5">
          <%= f.password_field :password, :class => 'form-control' %>
        </div>
      </div>
    </div>

    <div class="clear" style="height: 10px;"></div>
    <% if devise_mapping.rememberable? -%>
        <div class="row">
          <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-5">
              <% if devise_mapping.rememberable? -%>
                  <div><%= f.check_box :remember_me %> <%= f.label 'Запомнить меня' %></div>
              <% end -%>
            </div>
          </div>
        </div>
    <% end -%>

    <div class="clear" style="height: 10px;"></div>
    <div class="row" id="submit_form">
      <div class="form-group">
        <div class="actions col-sm-7">
          <%= f.submit 'Войти', :class => 'btn btn-success btn-block' %>
        </div>
      </div>
    </div>


<% end %>

<%= render "devise/shared/links" %>


