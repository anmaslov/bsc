<%= simple_form_for(@news, :html => {:class => 'form-horizontal', :multipart => :true}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <div class="form-group">
      <%= f.label 'Заголовок', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :title, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'Тип', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.input :news_type, :collection => {"Блог" => 0, "Видео" => 1}, :class => 'form-control', :label => false, :include_blank => false %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label 'Краткое описание', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :description, :class => 'form-control', :rows => 5, :cols => 120 %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'Подробное описание', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :content, :class => "redactor", :rows => 10, :cols => 120 %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'Ссылка на Youtube', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :youtube_url, :class => 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="form-group">
        <%= f.label 'Картинка', :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.input :image %>
        </div>
      </div>
    </div>
  </div>

    <div class="form-group">
      <div class="col-sm-2">
      </div>
      <div class="actions col-sm-10">
        <%= f.submit 'Добавить', :class => 'btn btn-info btn-block' %>
      </div>
    </div>
<% end %>
