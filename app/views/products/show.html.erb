<%= title @product.title %>
<%= description @product.description %>
<%= keywords @product.keywords %>

<%= stylesheet_link_tag "//blueimp.github.io/Gallery/css/blueimp-gallery.min.css", :media => "all" %>
<%= javascript_include_tag "//blueimp.github.io/Gallery/js/jquery.blueimp-gallery.min.js" %>

<div class="row">
  <div class="col-md-9 col-xs-9">
    <div class="panel panel-noborder">
      <ol class="breadcrumb left">
        <%= render_breadcrumbs :tag => :li, :separator => "" %>
        <!--<li><a href="#">Измерительная техника</a></li>
        <li class="active">Тепловизоры</li>-->
        <li class="active"><%= @product.title %></li>
      </ol>

      <div class="clear"></div>
      <h1 class="title-product"><%= @product.title %> <small>арт. <%= @product.article %></small></h1>
      <div class="clear" style="height: 10px"></div>
      <div class="content">
        <%= raw @product.content %>
      </div>
      <div class="row">
        <div class="col-md-5 col-xs-5">
          <div class="panel panel-default">
            <div class="panel-heading">Характеристики</div>
            <!-- Table -->
            <table  class="table table-striped">
              <% @product.characters.each do |character| %>
              <tr>
                <td>
                  <%= character.name %>
                </td>
                <td>
                  <%= character.value %>
                </td>
              </tr>
              <% end %>
            </table>

          </div>
        </div>

        <div class="col-md-3 col-xs-3">
          <div class="panel panel-default">
            <div class="panel-heading">Деталировка</div>
            <!-- Table -->
            <table  class="table table-striped">
              <% @product.detailing.each do |detailing| %>
                  <tr>
                    <td>
                      <%= image_tag(detailing.image.url(:thumbnail), :alt => 'Деталировка', :class => 'detailing_img', :style => 'max-height: 50px') %>
                    </td>
                    <td>
                      <%= link_to 'Загрузить pdf', '', :class => 'detailing_pdf', :href => detailing.pdf %>
                    </td>
                  </tr>
              <% end %>
            </table>

          </div>
        </div>

        <div class="col-md-3 col-xs-3">
          <div class="panel panel-default">
            <div class="panel-heading">Документы</div>
            <div class="panel-body">
              <div id="links2">
                  <% @product.documents.each do |documents| %>
                    <a href='<%= documents.image.url(:original) %>' title="<%= @product.title %>" data-gallery>
                      <%= image_tag(documents.image.url(:thumb), :alt => @product.title, :class => 'documents_img', :style => 'max-height: 150px') %>
                    </a>
                  <% end %>
              </div>
            </div>
          </div>
        </div>

      </div>


    </div>
  </div>
  <div class="col-md-3 col-xs-3">
    <div class="panel panel-noborder">
      <%= image_tag(@product.image.url(:thumb), :alt => @product.title, :class => 'product_img', :style => 'max-height: 150px') %>

      <div class="clear" style="height: 25px;"></div>

      <div id="links1">
        <% @product.imgs.each do |image| %>
        <a href='<%= image.picture.url(:original) %>' title="<%= @product.title %>" data-gallery>
          <%= image_tag(image.picture.url(:thumbnail), :alt => @product.title, :class => 'product_img', :style => 'max-height: 50px') %>
        </a>
        <% end %>
      </div>

      <div class="clear" style="height: 25px;"></div>
      <h3>
          <%= raw (@product.old_price) ? "<del>" + @product.old_price.to_s + '<span class="ruble">a</span>' + "</del>" : '' %>
          <%= @product.price %><span class="ruble">a</span>
      </h3>
      <div class="clear" style="height: 5px;"></div>
      <button type="button" class="btn btn-lg btn-success buy" style="width: 100%;" data-toggle="modal" data-target="#addToBascet" onclick="showAddToBascet('<%= @product.article %>');">Купить</button>
    </div>
  </div>
</div>

<div class="hidden">
  <%= render(@product) %>
</div>

<!-- The Bootstrap Image Gallery lightbox, should be a child element of the document body -->
<div id="blueimp-gallery" class="blueimp-gallery">
  <!-- The container for the modal slides -->
  <div class="slides"></div>
  <!-- Controls for the borderless lightbox -->
  <h3 class="title"></h3>
  <a class="prev">‹</a>
  <a class="next">›</a>
  <a class="close">×</a>
  <a class="play-pause"></a>
  <ol class="indicator"></ol>
  <!-- The modal dialog, which will be used to wrap the lightbox content -->
  <div class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" aria-hidden="true">&times;</button>
          <h4 class="modal-title"></h4>
        </div>
        <div class="modal-body next"></div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default pull-left prev">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Previous
          </button>
          <button type="button" class="btn btn-primary next">
            Next
            <i class="glyphicon glyphicon-chevron-right"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render :template => "layouts/view-toggle" %>