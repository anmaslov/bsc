<%= simple_form_for(@slider, :html => {:class => 'form-horizontal', :multipart => :true}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <div class="form-group">
      <%= f.label 'Заголовок', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :title, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'Ссылка', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :link, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'Новость', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.association :news, :prompt => "Ссылка на новость", :class => 'form-control', :label => false, :include_blank => false %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'Продукт', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.association :product, :prompt => "Ссылка на продукт", :class => 'form-control', :label => false, :include_blank => false %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'Каталог', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.association :catalog, :prompt => "Ссылка на каталог", :class => 'form-control', :label => false, :include_blank => false %>
      </div>
    </div>

    <div class="row">
      <div class="form-group">
        <%= f.label 'Картинка', :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.input :image, :label => false %>
        </div>
      </div>
    </div>

  </div>

    <div class="form-group">
      <div class="col-sm-2">
      </div>
      <div class="actions col-sm-10">
        <%= f.submit 'Добавить', :class => 'btn btn-info btn-block' %>
      </div>
    </div>
<% end %>
