<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Название страницы' %><br>
    <%= f.text_field :title, size: 100 %>
  </div>
<div class="field">
  <%= f.label :url %><br>
  <%= f.text_field :url, size: 100 %>
</div>
  <div class="field">
    <%= f.label 'Краткое описание' %><br>
    <%= f.text_area :description, :rows => 10, :cols => 120 %>
  </div>
  <div class="field">
    <%= f.label 'Содержание страницы' %><br>
    <%= f.text_area :content, :class => "redactor", :rows => 10, :cols => 120 %>
  </div>
  <div class="field">
    <%= f.label 'Ключевые слова через запятую' %><br>
    <%= f.text_field :keywords, size: 100 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
