<%= title 'Каталог' %>

<% if (user_signed_in? && current_user.admin?) %>
    <nav class="navbar-admin navbar-inverse-admin navbar-fixed-bottom" role="navigation"> <!-- navbar-fixed-top -->
      <nav class="navbar-admin navbar-admin" role="navigation">
        <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-footer-menu">

            <%= link_to 'Добавить подкаталог', new_catalog_path, :class => 'navbar-brand' %>
            <%= link_to 'Добавить товар', new_product_path, :class => 'navbar-brand' %>
            <%= link_to 'Масс переместить в другой каталог', '#', :class => 'navbar-brand' %>

          </div>
        </div><!-- /.container-fluid -->
      </nav>
    </nav>
<% end %>

<div class="row">


  <div class="panel-body">

    <div class="btn-group right catalog-view-toggle" data-toggle="buttons">
      <label class="btn btn-default btn-sm active">
        <input type="radio" name="options" id="option1">
        <span class="glyphicon glyphicon-th-large"></span>
      </label>
      <label class="btn btn-default btn-sm">
        <input type="radio" name="options" id="option3">
        <span class="glyphicon glyphicon-th-list"></span>
      </label>
    </div>

    <div class="clear" style="height: 10px;"></div>

    <div class="row catalog-th-large">
      <table class="table table-striped table-product">
        <thead>
        <tr class="tr catalog hidden">
          <th></th>
          <th>Наименование</th>
          <th>Описание</th>
        </tr>
        </thead>
        <tbody>
        <%= render(Catalog.where({:parent_id=>[0, nil]}).order('title ASC')) %>
        </tbody>
      </table>
    </div>

  </div>

</div>

<%= render :template => "layouts/view-toggle" %>