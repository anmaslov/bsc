      <input name="cps_phone" value="79110000000" type="hidden" id="phone_yandex_market" />
      <input name="cps_email" value="user@domain.com" type="hidden" id="email_yandex_market" />
     <div class="row hidden" id="submit_yandex_market">
      <div class="form-group">
        <div class="actions col-sm-12">
          <input class="btn btn-info btn-block" name="commit" type="submit" value="Перейти к оплате">
        </div>
      </div>
      </div>
    </form>

    </div>
  <div class="col-sm-6" id="order_cart">
  <%= render :partial => 'carts/cart_order', :object => @cart %>
  </div>
</div>