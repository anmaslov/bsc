<h1>Заказ №<%=@order.id %></h1>

<table class="table table-striped table-hover" style="width: 100%">
  <tr>
    <th>
      Артикул
    </th>
    <th>
      Название
    </th>
    <th>
      Количество
    </th>
    <th>
      Цена
    </th>
    <th>
      Сумма
    </th>
  </tr>
  <%= render :partial => 'line_items/line_item_mailer', :collection => @order.line_items %>
</table>
<hr>
<span style="text-align: right; width: 100%; float: right">
  <h2>Итого: <%= number_to_ruble(@order.total_price)%></h2>
</span>

<hr>

<%= render @order %>

<% if can? :manage, @order %>
<%= link_to 'К списку заказов', orders_path %>
<% end %>